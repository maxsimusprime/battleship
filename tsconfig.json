{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/__test__"]
}